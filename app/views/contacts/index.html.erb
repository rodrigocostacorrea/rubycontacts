<div class="basic-grey">

  <h1><%= "#{t('messages.listing')} #{@contacts.model.model_name.human(count: @contacts.count)}" %></h1>

  <script>$.notify("<%= notice %>","success");</script>

  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= @contacts.model.human_attribute_name "name" %></th>
      <th><%= @contacts.model.human_attribute_name "kind" %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.kind.description %></td>
        <td><%= link_to t('buttons.show'), contact, class: "btn btn-outline-success" %></td>
        <td><%= link_to t('buttons.edit'), edit_contact_path(contact), class: "btn btn-outline-warning" %></td>
        <td><%= link_to t('buttons.destroy'), contact, class: "btn btn-outline-danger", method: :delete, data: { confirm: t('messages.delete_confirmation') } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <div class="pagination-info">
    <%= page_entries_info @contacts %>
  </div>

  <%= paginate @contacts %>

  <br>

  <div class="actions">
    <table>
      <tr>
        <td><%= link_to t('buttons.home'), home_index_path, class: "btn btn-outline-info" %></td>
        <td><%= link_to t('buttons.new'), new_contact_path, class: "btn btn-outline-primary" %></td>
      </tr>
    </table>
  </div>

</div>

