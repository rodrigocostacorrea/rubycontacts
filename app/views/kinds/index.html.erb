<div class="basic-grey">

  <h1><%= "#{t('messages.listing')} #{@kinds.model.model_name.human(count: @kinds.count)}" %></h1>

  <p id="notice"><%= notice %></p>

  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= @kinds.model.human_attribute_name "description" %></th>
      <th><%= t('texts.contact') %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= kind.description %></td>
        <td><%= kind.contacts.size %></td>
        <td><%= link_to t('buttons.show'), kind, class: "btn btn-outline-success" %></td>
        <td><%= link_to t('buttons.edit'), edit_kind_path(kind), class: "btn btn-outline-warning" %></td>
        <td><%= link_to t('buttons.destroy'), kind, class: "btn btn-outline-danger", method: :delete, data: { confirm: t('messages.delete_confirmation') } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <div class="pagination-info">
    <%= page_entries_info @kinds %>
  </div>

  <%= paginate @kinds %>

  <br>

  <div class="actions">
    <table>
      <tr>
        <td><%= link_to t('buttons.home'), home_index_path, class: "btn btn-outline-info" %></td>
        <td><%= link_to t('buttons.new'), new_kind_path, class: "btn btn-outline-primary" %></td>
      </tr>
    </table>
  </div>

</div>